{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "LeClasseur-Updater",
  "version": "1.0.1",
  "identifier": "com.leclasseur.updater",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "LeClasseur-Updater",
        "width": 800,
        "height": 600,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhEQUI3MDg3QkZEQTk5MDMKUldRRG1kcS9oM0NyalpLSjc3S0VrM0FQeXZFYU9lbVNOQWNVQzFKaWhOU1M4RTJWdWcrd0RicmEK",
      "endpoints": [
        "https://github.com/mussonking/LC-updater/releases/latest/download/update.json"
      ],
      "dangerousInsecureTransportProtocol": true
    }
  }
}